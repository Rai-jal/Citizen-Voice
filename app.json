{
  "expo": {
    "name": "CitizenVoice",
    "slug": "citizenvoice",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "citizenvoice",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "CitizenVoice - Your platform for reporting issues, fact-checking, and accessing government services.",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rai.citizenvoice",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow CitizenVoice to record audio for reports and voice search.",
        "NSPhotoLibraryUsageDescription": "Allow CitizenVoice to access your photos and videos for attaching evidence to reports.",
        "NSCameraUsageDescription": "Allow CitizenVoice to take photos for reports.",
        "NSLocationWhenInUseUsageDescription": "Allow CitizenVoice to access your location for location-based reports.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.rai.citizenvoice",
      "versionCode": 1,
      "compileSdkVersion": 34,
      "targetSdkVersion": 34,
      "minSdkVersion": 21,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "privacy": "public",
    "privacyPolicy": {
      "url": "https://citizenvoice.app/privacy-policy"
    },
    "additionalInfo": {
      "android": {
        "package": "com.rai.citizenvoice"
      },
      "ios": {
        "bundleIdentifier": "com.rai.citizenvoice"
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CitizenVoice to access your photos for attaching report evidence."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d20bb443-6838-4653-80f6-40983578963a"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/d20bb443-6838-4653-80f6-40983578963a"
    }
  }
}
